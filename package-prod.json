{
  "name": "orshot-mcp-server",
  "version": "1.8.0",
  "description": "Production-ready Model Context Protocol server for Orshot image generation API with advanced features including auto-mapping, validation, and robust error handling",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "orshot-mcp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured\"",
    "validate": "tsc --noEmit",
    "prepare": "npm run build",
    "health-check": "node -e \"console.log('Server health check: OK')\""
  },
  "keywords": [
    "mcp",
    "orshot",
    "image-generation",
    "api",
    "claude",
    "ai",
    "automation",
    "studio-templates",
    "production"
  ],
  "author": "Orshot MCP Server Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["build", "README.md", "LICENSE"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/orshot/orshot-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/orshot/orshot-mcp-server/issues"
  },
  "homepage": "https://github.com/orshot/orshot-mcp-server#readme"
}
